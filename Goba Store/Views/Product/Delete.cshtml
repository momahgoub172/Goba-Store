@model Product

<h2>Delete Product</h2>

<div class="container row">
    <form class="col-8" method="post">
        <div class="form-group">
            <label asp-for="Name" class="form-label">Name</label>
            <input disabled asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="form-label">Price</label>
            <input disabled asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ShortDescription" class="form-label">Description</label>
            <textarea disabled asp-for="ShortDescription" class="form-control" ></textarea>
        </div>
        <div class="col-8">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <input disabled asp-for="Category.Name" class="form-control"/>
        </div>
        <div class="form-group">
            <a asp-controller="Product" asp-action="DeletePost" asp-route-id="@Model.Id" type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</a>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary"><i class="fa-sharp fa-solid fa-arrow-left"></i> Back</a>
        </div>
    </form>
    <div class="col-4 pt-5">
        <img src="@Constants.ImagePath@Model.Image" width="100%" height="80%" style="border-radius:5px; border:1px solid #bbb"/>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height:250,
                disable:true
            });
        });
    </script>
}