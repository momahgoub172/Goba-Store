@model IEnumerable<Goba_Store.Application.View_Models.CartProductViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="pb-5 pt-5 row justify-content-between">
        <div class="col-6">
            <h2>Order Details</h2>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-success w-25 col-4">Continue Shopping</a>
    </div>
</div>
<br/> <br/>
<div class="container">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <img src="@Constants.ImagePath@item.ImageUrl" alt="@item.Name" width="100"/>
                    </td>
                    <td class="text-center p-2">
                        <a asp-action="RemoveFromCart" asp-route-Id="@item.Id" asp-route-controllername="Cart" class="btn btn-danger btn-sm">
                            <i class="fa-solid fa-trash-can" style="color: #511f1f;"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <a asp-controller="Cart" asp-action="Summary" class="btn btn-primary w-25" >Buy</a>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            There are no products to display.
        </div>
    }
</div>